<section class="inner-hero-section">
    {% if section.settings.image != blank %}
    <img src="{{section.settings.image | img_url:"large"}}" alt="hero">
    {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{'lifestyle-' | append: current | placeholder_svg_tag: "placeholder-svg"}}
    {% endif %}
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1>{{section.settings.title}}</h1>
                {{section.settings.descreption}}
                <a href="{{section.settings.button_url}}"
                    class="btn btn-secondary">{{section.settings.button_label}}</a>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
"name": "Hero",
"class": "hero-section",
"settings": [
{
"type": "image_picker",
"id":"image",
"label":"Heading Image"
},
{
"type": "text",
"id":"title",
"default": "Example Heading",
"label":"Heading Title"
},
{
"type": "richtext",
"id":"descreption",
"default": "<p>Example paragraph</p>",
"label":"Heading Descreption"
},
{
"type": "text",
"id":"button_label",
"default": "Button",
"label":"Heading Button"
},
{
"type": "url",
"id":"button_url",
"label":"Heading Button link"
}
],
"presets": [
{
"category": "Hero",
"name":"Simple Hero"
}
]
}
{% endschema %}